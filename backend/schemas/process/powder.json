{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Powder",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "title": "ID",
      "description": "Unique powder identifier"
    },
    "name": {
      "type": "string",
      "title": "Name",
      "description": "Powder name"
    },
    "type": {
      "type": "string",
      "title": "Type",
      "description": "Powder type"
    },
    "size": {
      "type": "string",
      "title": "Size",
      "description": "Particle size range"
    },
    "manufacturer": {
      "type": "string",
      "title": "Manufacturer",
      "description": "Powder manufacturer"
    },
    "lot": {
      "type": "string",
      "title": "Lot Number",
      "description": "Manufacturing lot number"
    }
  },
  "required": ["name", "type", "size", "manufacturer", "lot"]
} 